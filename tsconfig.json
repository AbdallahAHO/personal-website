{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    // skip checking all of your dependenciesâ€™ d.ts files
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "astro.config.ts",
    // explicitly include your generated content types
    ".astro/content.d.ts"
  ],
  "exclude": ["node_modules"]
}
