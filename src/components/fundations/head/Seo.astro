---
import { SEO } from "astro-seo";
import { SITE } from "@/constants/site";

interface Props {
	title?: string;
	description?: string;
	image?: string;
	type?: string;
	canonical?: string;
}

const {
	title = SITE.TITLE,
	description = SITE.DESCRIPTION,
	image = SITE.OG_IMAGE,
	type = SITE.OG_TYPE,
	canonical = Astro.url.href,
} = Astro.props;
---

<SEO
  title={title}
  description={description}
  canonical={canonical}
  openGraph={{
    basic: {
      title: title,
      type: type,
      image: new URL(image, SITE.URL).toString(),
      url: canonical,
    },
    optional: {
      description: description,
      siteName: SITE.NAME,
      locale: SITE.LOCALE,
    },
    image: {
      width: parseInt(SITE.OG_IMAGE_WIDTH),
      height: parseInt(SITE.OG_IMAGE_HEIGHT),
      alt: SITE.OG_IMAGE_ALT,
      type: "image/png",
    },
  }}
  twitter={{
    creator: SITE.TWITTER_HANDLE,
    site: SITE.TWITTER_HANDLE,
    card: SITE.TWITTER_CARD_TYPE as "summary" | "summary_large_image" | "app" | "player",
  }}
  extend={{
    meta: [
      { name: "robots", content: "index, follow" },
      { name: "googlebot", content: "index, follow" },
      { name: "author", content: SITE.AUTHOR },
      { name: "keywords", content: SITE.KEYWORDS.join(", ") },
    ],
  }}
/>
