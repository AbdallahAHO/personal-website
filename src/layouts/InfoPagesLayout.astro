---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <Wrapper variant="standard" class="pt-12 lg:py-32 xl:py-54">
    <div class="flex flex-col gap-2">
      <Text
        tag="h1"
        variant="displaySM"
        class="text-black dark:text-white font-medium"
      >
        {frontmatter.title || "Information Page"}
      </Text>
      <Text
        tag="p"
        variant="textM"
        class="text-zinc-500 text-balance dark:text-zinc-400"
      >
        {frontmatter.description || "This is an information page."}
      </Text>
    </div>

    {
      frontmatter.pubDate && (
        <div class="flex flex-col text-zinc-500 dark:text-zinc-400 mt-3">
          <time datetime={frontmatter.pubDate.toString().slice(0, 10)}>
            <Text tag="span" variant="textXS" class="font-medium">
              Written on {frontmatter.pubDate.toString().slice(0, 10)}
            </Text>
          </time>
        </div>
      )
    }
  </Wrapper>
  <section>
    <Wrapper
      variant="standard"
      class="py-12 border-b dark:border-white/10 border-black/10 pt-2"
    >
      <Wrapper variant="prose">
        <slot />
      </Wrapper>
    </Wrapper>
  </section>
</BaseLayout>
